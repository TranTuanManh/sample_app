<% provide :title, t("log_in") %>
<h1><%= t "log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control input" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "session-remember-me" %>
        <span><%= t ".remember" %></span>
      <% end %>

      <%= f.submit t("log_in"), class: "btn btn-primary form-control input" %>
    <% end %>

    <p><%= t ".new_user" %> <%= link_to t("sign"), signup_path %></p>
  </div>
</div>
