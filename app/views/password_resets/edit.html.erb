<% provide :title, t(".reset_pass") %>
<h1><%= t ".reset_pass" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages", user_error: @user %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input" %>

      <%= f.label :password_confirmation, t("confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control input" %>

      <%= f.submit t(".update_pass"), class: "btn btn-primary input" %>
    <% end %>
  </div>
</div>
