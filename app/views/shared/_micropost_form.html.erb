<%= form_for micropost do |f| %>
  <%= render "shared/error_messages", user_error: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: t(".compose") %>
  </div>
  <%= f.submit t(".submit"), class: "btn btn-primary input" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>
