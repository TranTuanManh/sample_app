<%= form_for user do |f| %>
  <%= render "shared/error_messages", user_error: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control input" %>

  <%= f.label :sex %>
  <%= f.radio_button :sex, t("male") %> <%= f.label t "male" %>
  <%= f.radio_button :sex, t("female"), class: "radio-field" %>
  <%= f.label t "female" %><br>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control input" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control input" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control input" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary input" %>
<% end %>
