<% provide :title, t(".signup") %>
<h1><%= t ".signup" %></h1>
<p><%= t ".content" %></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3 ">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages", user_error: @user %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control input" %>

      <%= f.label :sex %>
      <%= f.radio_button :sex, t("male") %> <%= f.label t "male" %>
      <%= f.radio_button :sex, t("female"), class: "radio-field" %>
      <%= f.label t "female" %><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control input" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control input" %>

      <%= f.label :password_confirmation, t(".confirm") %>
      <%= f.password_field :password_confirmation,
        class: "form-control input" %>

      <%= f.submit t(".create"), class: "btn btn-primary input" %>
    <% end %>
  </div>
</div>
